{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "jsx": "react-jsx",
        "noEmit": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src",
        "globals.d.ts"
    ]
}